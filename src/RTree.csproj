<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsPackable>true</IsPackable>
		
		<PackageId>RED.RTree</PackageId>
		<Version>0.0.0</Version>
		<Authors>Rojo</Authors>
		<PackageTags>b-tree binary-tree data-structure</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>

		<DebugType>portable</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<RepositoryUrl>https://github.com/RED-RTree</RepositoryUrl>
		<RepositoryType>git</RepositoryType>

		<Deterministic>true</Deterministic>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<PackageReleaseNotes>
			- Generic in-memory B-Tree implementation (efficient for large datasets).
			- Generic implementation of a binary search tree
			- Full implementation of ICollection&lt;T&gt; (Add, Remove, Clear, CopyTo).
			- Fully compatible with LINQ (IEnumerable&lt;T&gt;).
			- Advanced features: Range Search and Order customization.
			- O(log n) complexity for Insert, Delete, and Search.
		</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<EmbeddedResource Include="icon.png" />
	</ItemGroup>

	<ItemGroup>
		<None Include=".\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<None Update="icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
	</ItemGroup>

</Project>
